<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_16"
        app:bl_corners_radius="@dimen/dp_8"
        app:bl_solid_color="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_3"
                android:text="外卖"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="#66"
                android:textColor="@color/black_33"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待商家接单"
                android:textColor="@color/black_99"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="剩余1:26:00"
                android:textColor="@color/red_e6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="商家配送"
                android:textColor="@color/red_e6"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万先生"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:background="@color/gray_f5"
                    android:paddingStart="@dimen/dp_3"
                    android:paddingEnd="@dimen/dp_3"
                    android:text="美团骑手"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:54"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="骑手已取货 | 4km"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/icon_order_message" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_16"
                        android:src="@mipmap/icon_order_phone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/gray_f5" />

        <LinearLayout
            android:id="@+id/ll_goods_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="#66"
                android:textColor="@color/black_33"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待骑手取餐"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_estimated_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="预计15:00"
                    android:textColor="@color/black_99" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/gray_f5" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/red_e6" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="@dimen/dp_99"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="共22件"
                android:textColor="@color/black_33"
                android:textSize="@dimen/sp_12"
                app:bl_gradient_angle="0"
                app:bl_gradient_endColor="@color/white"
                app:bl_gradient_startColor="@color/white0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_order_more" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="预计收入：¥666"
                android:textColor="@color/black_33"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_receiving_orders"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_88"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_8"
                android:gravity="center"
                android:text="拒单"
                android:textColor="@color/black_99"
                android:textSize="@dimen/sp_14"
                app:bl_corners_radius="@dimen/dp_16"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="@color/gray_ee"
                app:bl_stroke_width="@dimen/dp_2" />

            <TextView
                android:layout_width="@dimen/dp_88"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_8"
                android:gravity="center"
                android:text="接单打印"
                android:textColor="@color/red_e6"
                android:textSize="@dimen/sp_14"
                app:bl_corners_radius="@dimen/dp_16"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="@color/red_e6"
                app:bl_stroke_width="@dimen/dp_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_food_ok"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center"
            android:text="出餐完成"
            android:textColor="@color/red_e6"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/dp_16"
            app:bl_solid_color="@color/white"
            app:bl_stroke_color="@color/red_e6"
            app:bl_stroke_width="@dimen/dp_2" />

        <LinearLayout
            android:id="@+id/ll_order_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货人"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尹先生"
                        android:textColor="@color/black_99"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@color/red_10_e6"
                        android:paddingStart="@dimen/dp_4"
                        android:paddingEnd="@dimen/dp_4"
                        android:text="下单2次"
                        android:textColor="@color/red_e6"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@color/yellow_10_ff_6b"
                        android:paddingStart="@dimen/dp_4"
                        android:paddingEnd="@dimen/dp_4"
                        android:text="评价2次"
                        android:textColor="@color/yellow_ff_6b"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="15864780967"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自提时间"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="2023-11-22 14:00"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_order_verification"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_8"
                android:gravity="center"
                android:text="订单核销"
                android:textColor="@color/red_e6"
                android:textSize="@dimen/sp_14"
                app:bl_corners_radius="@dimen/dp_16"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="@color/red_e6"
                app:bl_stroke_width="@dimen/dp_2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>