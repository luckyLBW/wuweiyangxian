<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f9"
    tools:context=".fragment.MineFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_269"
        app:bl_corners_bottomLeftRadius="@dimen/dp_26"
        app:bl_corners_bottomRightRadius="@dimen/dp_26"
        app:bl_solid_color="@color/red_e6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/icon_mine_top" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_88"
        android:src="@mipmap/icon_mine_head" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已经在此门店度过了222个日夜"
            android:textColor="@color/red_ffb"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_name"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        app:bl_corners_radius="@dimen/dp_8"
        app:bl_solid_color="@color/white">

        <TextView
            android:id="@+id/tv_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_mine_rule_center"
            android:drawableEnd="@mipmap/icon_gray_right_back"
            android:drawablePadding="@dimen/dp_8"
            android:text="规则中心"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_mine_basic_information"
            android:drawableEnd="@mipmap/icon_gray_right_back"
            android:drawablePadding="@dimen/dp_8"
            android:text="基本信息"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_f5" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_mine_feedback"
            android:drawableEnd="@mipmap/icon_gray_right_back"
            android:drawablePadding="@dimen/dp_8"
            android:text="意见反馈"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_f5" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_mine_setting"
            android:drawableEnd="@mipmap/icon_gray_right_back"
            android:drawablePadding="@dimen/dp_8"
            android:text="设置"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</RelativeLayout>