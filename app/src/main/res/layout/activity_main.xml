<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_button" />

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/dp_4"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_home_select"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/black18"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_message"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/black_70_18"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_shop"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/black_70_18"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/shop_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_shop_cart"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/black_70_18"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_mine"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/black_70_18"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</RelativeLayout>